<?xml version="1.0" encoding="UTF-8"?>

<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="./vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
         stopOnFailure="false"
>
    <testsuites>
        <!-- General -->
        <testsuite name="Unit">
            <directory suffix="Test.php">./tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory suffix="Test.php">./tests/Feature</directory>
        </testsuite>
        <testsuite name="Integration">
            <directory suffix="Test.php">./tests/Integration</directory>
        </testsuite>

        <!-- Units -->
        <testsuite name="Filters">
            <directory suffix="Test.php">./tests/Unit/Filters</directory>
        </testsuite>
        <testsuite name="Controllers">
            <directory suffix="Test.php">./tests/Unit/Http/Controllers</directory>
        </testsuite>
        <testsuite name="Requests">
            <directory suffix="Test.php">./tests/Unit/Http/Requests</directory>
        </testsuite>
        <testsuite name="Resources">
            <directory suffix="Test.php">./tests/Unit/Http/Resources</directory>
        </testsuite>
        <testsuite name="Models">
            <directory suffix="Test.php">./tests/Unit/Models</directory>
        </testsuite>

        <!-- Feature -->
        <testsuite name="Classroom">
            <directory suffix="Test.php">./tests/Feature/Classroom</directory>
        </testsuite>
        <testsuite name="General">
            <directory suffix="Test.php">./tests/Feature/General</directory>
        </testsuite>
    </testsuites>

    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">./app</directory>
        </include>
    </coverage>

    <php>
        <server name="APP_ENV" value="testing"/>
        <server name="BCRYPT_ROUNDS" value="4"/>
        <server name="CACHE_DRIVER" value="array"/>
        <server name="DB_CONNECTION" value="ec_dev"/>
        <server name="DB_DATABASE" value="ec_tests"/>
        <server name="MAIL_MAILER" value="array"/>
        <server name="QUEUE_CONNECTION" value="sync"/>
        <server name="SESSION_DRIVER" value="array"/>
        <server name="TELESCOPE_ENABLED" value="false"/>
    </php>

    <logging>
        <log type="testdox-text" target="api-tests.txt"/>
    </logging>

</phpunit>
